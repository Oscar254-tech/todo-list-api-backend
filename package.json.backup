{
  "name": "todo-list-api-backend",
  "version": "1.0.0",
  "description": "A JSON Server API for To-Do List Application with full CRUD functionality",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "server": "cd backend && json-server --watch db.json --port 5000 --host 0.0.0.0",
    "dev": "cd backend && nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "reset-db": "cd backend && cp default-db.json db.json",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d backend"
  },
  "dependencies": {
    "json-server": "^0.17.3",
    "cors": "^2.8.5",
    "gh-pages": "^6.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "todo-app",
    "rest-api",
    "json-server",
    "crud-api",
    "productivity-tool"
  ],
